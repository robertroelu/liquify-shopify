<div class="padding-global">
    <div class="container-large">
        <div class="padding-section-medium">
            <div class="product_component">
                <div id="w-node-f30582a0-c591-dfac-a791-8ead1e974c62-f1524a26" class="product_heading-wrapper">
                    <div class="product_heading">
                        <div class="max-width-large">
                            <h2 class="heading-style-h2">
                                {{ section.settings.text_headline }}
                            </h2>
                        </div>
                    </div>
                    <div class="product_button-row hide-mobile-landscape">
                        <a class="button w-button" href="{{ section.settings.url_button_link }}">
                            {{ section.settings.text_button_text }}
                        </a>
                    </div>
                </div>
                <div class="product_list-wrapper">
                    <ul role="list" class="product_list w-list-unstyled">
                        {% for product in section.settings.collection_slider.products
                            limit: section.settings.collection_slider_limit
                        %}
                            <li class="product_list-item">
                                {% render 'product_item', product: product %}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

{% schema %}
{
    "tag": "section",
    "name": "category",
    "class": "section_product",
    "settings": [
        { "id": "text_headline", "type": "text", "label": "Headline", "default": "Short heading here" },
        { "id": "url_button_link", "type": "url", "label": "Button-Link" },
        { "id": "text_button_text", "type": "text", "label": "Button-Text", "default": "All products" },
        { "id": "collection_slider", "type": "collection", "label": "Slider" },
        {
            "id": "collection_slider_limit",
            "type": "range",
            "label": "Limit: Slider",
            "default": 6,
            "min": 1,
            "max": 99,
            "step": 1
        }
    ],
    "presets": [{ "name": "category", "category": "Liquify" }]
}
{% endschema %}

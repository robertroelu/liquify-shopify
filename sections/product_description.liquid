<div class="padding-global">
    <div class="container-large">
        <div data-w-id="e1bde908-e72e-d965-2a1a-6ac2e908d47d" class="padding-section-medium">
            <h2 class="heading-style-h2">
                {{ section.settings.text_headline }}
            </h2>
            <div class="spacer-medium"></div>
            <div li-object="product.description" class="text-rich-text max-width-large w-richtext">
                {{ product.description }}
            </div>
        </div>
    </div>
    <div id="beschreibung" class="anchor-link"></div>
</div>

{% schema %}
{
    "tag": "section",
    "name": "product_description",
    "class": "section_beschreibung",
    "settings": [{ "id": "text_headline", "type": "text", "label": "Headline", "default": "Description" }],
    "presets": [{ "name": "product_description", "category": "Liquify" }]
}
{% endschema %}

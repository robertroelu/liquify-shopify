<div class="padding-global">
    <div class="container-large">
        <div class="padding-section-medium">
            <div class="max-width-large">
                <h2 class="heading-style-h2">
                    {{ section.settings.text_headline }}
                </h2>
            </div>
            <div class="spacer-large"></div>
            <div class="mehr_component">
                <div class="mehr_list-wrapper">
                    <div class="w-layout-grid mehr_liste">
                        {% for block in section.blocks %}
                            {% if block.type == 'mehr-block' %}
                                <div li-block="Mehr-Block" class="mehr_item">
                                    <a class="mehr_image-link w-inline-block" href="{{ block.settings.url_link }}">
                                        <div class="mehr_image-wrapper">
                                            <h3 class="heading-style-h3 z-index-1 text-color-white">
                                                {{ block.settings.text_titel }}
                                            </h3>
                                            <img
                                                class="mehr_image"
                                                src="{{ block.settings.image_bild | img_url: 'master' }}"
                                                alt="{{ block.settings.image_bild.alt }}"
                                                loading="lazy"
                                            >
                                            <div class="mehr_image is-overlay"></div>
                                        </div>
                                    </a>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% schema %}
{
    "tag": "section",
    "name": "links",
    "class": "section_mehr background-color-grey",
    "blocks": [
        {
            "name": "Mehr-Block",
            "type": "mehr-block",
            "settings": [
                { "type": "url", "id": "url_link", "label": "Link" },
                { "type": "text", "id": "text_titel", "label": "Titel", "default": "Bestselling" },
                { "type": "image_picker", "id": "image_bild", "label": "Bild" }
            ]
        }
    ],
    "settings": [{ "id": "text_headline", "type": "text", "label": "Headline", "default": "Short heading here" }],
    "presets": [{ "name": "links", "category": "Liquify" }]
}
{% endschema %}
